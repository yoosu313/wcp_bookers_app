<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, method: :delete, "data-confirm" => "Do you really want to delete this post" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model: @book, local: true do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error
    <% @book.errors.full_messages.each do |msg| %>
      <ul><li><%= msg %></li></ul>
    <% end %>
  <% end %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

