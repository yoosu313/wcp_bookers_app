<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
<% if @book.errors.any? %>
    <%= @book.errors.count %> error
    <% @book.errors.full_messages.each do |msg| %>
      <ul><li><%= msg %></li></ul>
    <% end %>
  <% end %>
  
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to 'Show', book_path(@book) %>
|
<%= link_to 'Back', books_path %>
